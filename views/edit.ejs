<body>
  <nav>
    <!-- Replace links with proper routes or single page refresh -->
    <!-- Replace links with proper routes  -->
    <!-- <p>share locations from the places you love</p> -->
    <a href="/index"><img src="/IMGS/header-circle-dark-small.png"></a>
    <ul>
      <li><a href="/profile">cancel</a></li>
      <li><a href="/index">logout</a></li>
    </ul>
  </nav>
  <div class="content-large">
    <div class="table">
      <h1>edit map</h1>
      <input id="title" type="text" placeholder="title">
      <textarea id="description" type="text" placeholder="description" name="description"></textarea>
      <form id="saveMap" method="post"><button type="submit">
          SAVE BUTTON <img src="/IMGS/add-hover.png">
        </button></form>
      <a href="/explore/3"><i class="fas fa-arrow-right" style="color:#faf7ef;"></i></a>
    </div>

    <div class="markersWrap">
      <div class="markersList">
        <div class="description">
          <h1>
            <%= maps[i].title %>
          </h1>
          <p>
            <%= maps[i].description %>
          </p>
        </div>
      </div>
      <div class="right">
        <span class="likes">
          <i class="fas fa-heart"></i>
          <p><%= maps[i].likes %></p>
        </span>
        <div class="edit">
          <form method="GET" action="profile/edit/id">
            <i class="fas fa-edit"></i>
          </form>
          <form method="GET" action="profile/delete/id">
            <i class="fas fa-trash-alt" style="margin-left: 20px;"></i>
          </form>
        </div>
      </div>
    </div>

    <button id="addNewMarker">add new marker +</button>
    <div id="newMarkerWrap">
      <div class="search">
        <form id="formSearchTerm">
          <input type="text" id="searchTerm" placeholder="search">
          <input id="title" type="text" placeholder="title">
          <textarea id="description" type="text" placeholder="caption" name="description"></textarea>
          <input id="formatted_address" type="text" placeholder="address">
          <input id="latitude" type="text" placeholder="latitude" name="latitude">
          <input id="longitude" type="text" placeholder="longitude" name="longitude">
          <form id="createForm" method="post"><button type="submit">
              <img src="/IMGS/add-hover.png">
            </button></form>
        </form>
      </div>
    </div>

  </div>
  <div class="main-container">
    <div id="map-container">
      <div id="map"></div>
      <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBn7dBW6G6TF62UyX3krF5enoY6WF3A7Tg&callback=initMap"
        async defer></script>
    </div>
  </div>
</body>
<!-- to top-->
<button id="to-top"><img src="/IMGS/to-top.png"></i></button>
